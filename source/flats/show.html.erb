<!-- source/flats/show.html.erb -->

<% flat = data.flats[owner] %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 100%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>'); height: 50vh; background-position: center;">
  </div>
</div>
<!-- Access data.flats with owner's name as key -->

<!-- Inject flat data in template -->


<div class="container">
  <div class="row img-resize">

    <div class="col-xs-12 col-sm-6 col-md-4 col-sm-offset-1">

        <div class="header-flat-avatar">
          <div class="header-flat-owner  text-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
            <p><%= owner %></p>
          </div>
          <div class="header-flat-description">
            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
          </div>
        </div>

    </div>

    <div class="col-xs-12 col-md-4  col-sm-offset-1">
      <form action="#">
          <h4>Book this flat</h4>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
        <input type="submit" class="btn btn-primary" value="Book it" style="width: 100%">
      </form>
    </div>

  </div>
</div>


